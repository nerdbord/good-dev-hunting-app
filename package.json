{
  "name": "good-dev-hunting-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/platform-app",
    "storybook": "npm run storybook -w packages/ui-system",
    "start": "npm run start -w apps/platform-app",
    "studio": "cd ./apps/platform-app && npx prisma studio"
  },
  "lint-staged": {
    "apps/platform-app/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "apps/platform-app/**/*.{json,css,scss}": [
      "prettier --write"
    ],
    "apps/hunty-ai-bot/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "apps/hunty-ai-bot/**/*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  }
}
